{
  "extends": ["expo/tsconfig.base"],
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    ".eslintrc.js",
    "nativewind-env.d.ts"
  ],
  "exclude": ["__tests__/**/*-test.ts"]
}
